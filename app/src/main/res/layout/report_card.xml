<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/report_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkenTint"
        android:layout_margin="2dp" >

        <TextView
            android:id="@+id/report_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datetime"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/report_establishment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Establishment"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_below="@id/report_datetime"
            />

        <TextView
            android:id="@+id/report_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Comment"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_below="@id/report_establishment"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
