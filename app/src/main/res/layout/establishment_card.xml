<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/establishment_cardview"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/specific_establishment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/establishment_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@color/cardview_dark_background"
            android:contentDescription="Establishment background" />

        <TextView
            android:id="@+id/establishment_attribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/establishment_background"
            android:text="Photo by First Last"
            android:textColor="@color/colorDarkenTint"
            android:textSize="10sp"
            android:fontFamily="san-serif-light"
            android:layout_margin="5dp"/>

        <!--<ImageView
            android:id="@+id/establishment_inspect_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/searchfab"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:contentDescription="Inspect" />-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorDarkenTint"
            android:layout_marginTop="7.5dp"
            android:paddingTop="7.5dp"
            android:paddingBottom="7.5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/establishment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Example Name"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/establishment_types"
                android:layout_below="@+id/establishment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food | Bar | Entertainment"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-light"
                android:textSize="12sp"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/general_establishment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/establishment_general_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is the establishment you're looking for not here? Fill out an empty form here."
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="sans-serif-medium"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/general_establishment_inspect_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/searchfab"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/establishment_general_message"
            android:layout_centerHorizontal="true"
            android:contentDescription="General Inspect" />

    </RelativeLayout>

</android.support.v7.widget.CardView>