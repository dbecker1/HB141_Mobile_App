<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:background="@drawable/background_gradient"
    tools:context="com.binitshah.hb141.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/sign_in_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/login_logo"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/hb141"
                android:padding="@dimen/activity_vertical_margin"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/email_field_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:textSize="15sp"
                android:layout_below="@+id/login_logo"
                android:layout_marginTop="16dp"
                android:hint="Email"
                android:maxLines="1"
                android:background="@android:color/white"
                android:padding="8dp"
                android:selectAllOnFocus="false" />

            <EditText
                android:id="@+id/password_field_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:textSize="15sp"
                android:layout_below="@+id/email_field_id"
                android:layout_marginTop="16dp"
                android:hint="Password"
                android:maxLines="1"
                android:background="@android:color/white"
                android:padding="8dp"
                android:selectAllOnFocus="true" />

            <Button
                android:id="@+id/login_button"
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password_field_id"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                style="@style/Widget.AppCompat.Button.Colored" />

            <LinearLayout
                android:layout_below="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true">

                <Button
                    android:id="@+id/forgot_password_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    style="@style/Widget.AppCompat.Button.Borderless" />

                <Button
                    android:id="@+id/sign_up_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    style="@style/Widget.AppCompat.Button.Borderless" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/sign_up_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/propic_field_id"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera_padded"
                android:padding="16dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#ffffff"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:id="@+id/name_signup_field_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:textSize="15sp"
                android:layout_below="@+id/propic_field_id"
                android:layout_marginTop="16dp"
                android:hint="Full Name"
                android:maxLines="1"
                android:background="@android:color/white"
                android:padding="8dp"
                android:selectAllOnFocus="false" />

            <EditText
                android:id="@+id/email_signup_field_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:textSize="15sp"
                android:layout_below="@+id/name_signup_field_id"
                android:layout_marginTop="16dp"
                android:hint="Email"
                android:maxLines="1"
                android:background="@android:color/white"
                android:padding="8dp"
                android:selectAllOnFocus="false" />

            <EditText
                android:id="@+id/password_signup_field_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textVisiblePassword"
                android:ems="10"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:textSize="15sp"
                android:layout_below="@+id/email_signup_field_id"
                android:layout_marginTop="16dp"
                android:hint="Password"
                android:maxLines="1"
                android:background="@android:color/white"
                android:padding="8dp"
                android:selectAllOnFocus="false" />

            <EditText
                android:id="@+id/password_confirm_signup_field_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textVisiblePassword"
                android:ems="10"
                android:textColorHint="@color/colorText"
                android:textColor="@color/colorText"
                android:textSize="15sp"
                android:layout_below="@+id/password_signup_field_id"
                android:layout_marginTop="16dp"
                android:hint="Confirm Password"
                android:maxLines="1"
                android:background="@android:color/white"
                android:padding="8dp"
                android:selectAllOnFocus="false" />

            <Button
                android:id="@+id/signup_button"
                android:text="Sign Up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password_confirm_signup_field_id"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                style="@style/Widget.AppCompat.Button.Colored" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/social_media_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_below="@+id/sign_in_view">

            <TextView
                android:id="@+id/orsignin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Or sign in/up with"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/google_signin_button"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:background="@android:color/holo_red_light"
                android:layout_below="@+id/orsignin"/>

            <ImageView
                android:id="@+id/facebook_signin_button"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:background="@android:color/holo_blue_light"
                android:layout_below="@+id/google_signin_button"/>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
